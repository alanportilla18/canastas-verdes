generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                 String               @id @default(uuid())
  name               String
  email              String               @unique
  password           String
  address            String?
  phone              String?
  admin              Boolean              @default(false)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  deletedAt          DateTime?
  DishReview         DishReview[]
  FavoriteDish       FavoriteDish[]
  FavoriteRestaurant FavoriteRestaurant[]
  Order              Order[]
  restaurant         Restaurant?
  RestaurantReview   RestaurantReview[]
}

model Restaurant {
  id                 String               @id @default(uuid())
  name               String
  slug               String               @unique
  address            String
  phone              String
  image              String
  adminId            String               @unique
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  deletedAt          DateTime?
  description        String
  rating             Float                @default(0)
  isOnOffer          Boolean              @default(false)
  Dish               Dish[]
  FavoriteRestaurant FavoriteRestaurant[]
  Order              Order[]
  admin              Account              @relation(fields: [adminId], references: [id])
  RestaurantReview   RestaurantReview[]
}

model Dish {
  id                 String               @id @default(uuid())
  name               String
  description        String
  price              Float?
  new_price          Float
  image              String
  restaurantId       String
  createdAt          DateTime             @default(now())
  deletedAt          DateTime?
  updatedAt          DateTime             @updatedAt
  rating             Float                @default(0)
  CategoriesInDishes CategoriesInDishes[]
  restaurant         Restaurant           @relation(fields: [restaurantId], references: [id])
  DishReview         DishReview[]
  DishesInOrder      DishesInOrder[]
  FavoriteDish       FavoriteDish[]
}

model Order {
  id            String          @id @default(uuid())
  name          String
  address       String
  phone         String
  accountId     String
  restaurantId  String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  deletedAt     DateTime?
  status        String          @default("pending")
  DishesInOrder DishesInOrder[]
  account       Account         @relation(fields: [accountId], references: [id])
  restaurant    Restaurant      @relation(fields: [restaurantId], references: [id])
}

model DishesInOrder {
  id        String    @id @default(uuid())
  quantity  Int
  dishId    String
  orderId   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  dish      Dish      @relation(fields: [dishId], references: [id])
  order     Order     @relation(fields: [orderId], references: [id])

  @@unique([dishId, orderId])
}

model Category {
  id                 String               @id @default(uuid())
  name               String               @unique
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  deletedAt          DateTime?
  CategoriesInDishes CategoriesInDishes[]
}

model CategoriesInDishes {
  id         String    @id @default(uuid())
  categoryId String
  dishId     String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?
  category   Category  @relation(fields: [categoryId], references: [id])
  dish       Dish      @relation(fields: [dishId], references: [id])

  @@unique([categoryId, dishId])
}

model RestaurantReview {
  id           String     @id @default(uuid())
  comment      String
  rating       Int
  accountId    String
  restaurantId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  deletedAt    DateTime?
  account      Account    @relation(fields: [accountId], references: [id])
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])

  @@unique([accountId, restaurantId])
}

model DishReview {
  id        String    @id @default(uuid())
  comment   String
  rating    Int
  accountId String
  dishId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  account   Account   @relation(fields: [accountId], references: [id])
  dish      Dish      @relation(fields: [dishId], references: [id])

  @@unique([accountId, dishId])
}

model FavoriteRestaurant {
  id           String     @id @default(uuid())
  accountId    String
  restaurantId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  deletedAt    DateTime?
  account      Account    @relation(fields: [accountId], references: [id])
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])

  @@unique([accountId, restaurantId])
}

model FavoriteDish {
  id        String    @id @default(uuid())
  accountId String
  dishId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  account   Account   @relation(fields: [accountId], references: [id])
  dish      Dish      @relation(fields: [dishId], references: [id])

  @@unique([accountId, dishId])
}
